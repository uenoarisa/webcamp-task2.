<h1>Books</h1>
<table>
  <thread>
    <th class="table-title">Title</th>
    <th class="table-body">Body</th>
    <th></th>
    <th></th>
    <th></th>
  </thread>
  
  <tbody>
    <tr>
      <td class="table-title">リーダブルコード</td>
      <td class="table-body">より良いコードを書くためのシンプルで実践的なテクニック</td>
      <td><a>Show</a></td>
      <td><a>Edit</a></td>
      <td><a>Destroy</a></td>
    </tr>
  </tbody>
  
  <% @books.each do |book| %>
    <tbody>
      <td class="table-title"><%= book.title %></td>
      <td class="table-body"><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tbody>
  <% end %>

</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- form_with部分 -->


<%= form_with model: Book.new, url:'/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

